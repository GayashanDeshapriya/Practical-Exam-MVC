@model IEnumerable<EmployeeManagementSystem.Models.Employee>

<h2>Employee List</h2>
<a href="@Url.Action("Create", "Employee")" class="btn btn-primary mb-3">Create New Employee</a>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Department</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = employee.EmployeeID })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = employee.EmployeeID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i })">@i</a>
            </li>
        }
    </ul>
</div>
